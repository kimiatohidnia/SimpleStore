<!-- Views/Admin/Orders.cshtml -->
@model List<SimpleStore.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="row">
    <div class="col-md-12">
        <h2>Manage Orders</h2>
        <hr />

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Orders</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>All Orders (@Model.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Payment Method</th>
                                    <th>Order Date</th>
                                    <th>Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>#@order.Id</td>
                                        <td>@order.FullName</td>
                                        <td>
                                            <span class="badge badge-info">@order.OrderItems.Count items</span>
                                        </td>
                                        <td><strong>@order.TotalPrice.ToString("C")</strong></td>
                                        <td>@order.PaymentMethod</td>
                                        <td>@order.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                        <td>
                                            <small>
                                                @order.Address<br />
                                                @order.City, @order.PostalCode
                                            </small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No orders found.</p>
                }
            </div>
        </div>
    </div>
</div>