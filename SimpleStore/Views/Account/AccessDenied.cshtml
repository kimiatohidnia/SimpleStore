@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">Access Denied</h2>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                </div>
                <h3>You do not have permission to access this resource.</h3>
                <p class="lead">Please login with an account that has the necessary permissions or contact the administrator.</p>
                
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>