@model int
@{
    // Model is the productId
}

<form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
    <input type="hidden" name="productId" value="@Model" />
    <div class="input-group mb-3">
        <input type="number" name="quantity" value="1" min="1" class="form-control" style="max-width: 100px;" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-cart-plus"></i> Add to Cart
        </button>
    </div>
</form>