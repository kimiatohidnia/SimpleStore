        margin-left: 1rem;
        margin-right: 1rem;
    }

    #categories [class*="col-"] {
        padding-left: 1rem;
        padding-right: 1rem;
    }
}

    /* Responsive enhancements */
    @@media (max-width: 768px) {
        .btn-enhanced {
            margin-bottom: 10px;
        }
        
        .floating-element {
            animation: none;
        }
    }

    /* Performance optimizations */
    .product-card-enhanced,
    .category-card-enhanced,
    .btn-enhanced {
        will-change: transform;
        backface-visibility: hidden;
    }
</style>

